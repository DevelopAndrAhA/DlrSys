<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<html>
<head>
	<title>DEALER SYSTEM</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link rel="stylesheet" href="resources/assets/css/main.css" />
	<link rel="shortcut icon" href="/resources/images/favicon.png" type="image/png"/>
</head>
<body>
<!-- Header -->
<header id="header">
	<div class="inner">
		<a href="http://localhost:8080" class="logo"><strong>Dealer System</strong></a>
		<nav id="nav">
			<a href="sign_in">ВОЙТИ</a>
		</nav>
		<a href="#navPanel" class="navPanelToggle"><span class="fa fa-bars"></span></a>
	</div>
</header>

<!-- Banner -->
<section id="banner">
	<div class="inner">
		<header>
			<h1>Система доставки товаров DEALER SYSTEM</h1>
		</header>

		<div class="flex ">

			<div>
				<span class="icon fa-car"></span>
				<h3>Курьеры</h3>
				<p>Удобная координация по GPS для доставки</p>
			</div>

			<div>
				<span class="icon fa-camera"></span>
				<h3>Фото</h3>
				<p>каждого магазина для сторудников доставки</p>
			</div>

			<div>
				<span class="icon fa-clock-o"></span>
				<h3>Эффективное</h3>
				<p>планирование доставки</p>
			</div>

		</div>

		<footer>
			<a href="https://play.google.com/store/apps/details?id=kg.t_agent" class="button">Андроид приложение</a>
		</footer>
	</div>
</section>



<!-- Footer -->
<footer id="footer">
	<div class="inner">

		<h3>Обратная связь</h3>

		<form action="#" method="post">

			<div class="field half first">
				<label for="name">Имя</label>
				<input name="name" id="name" type="text" placeholder="Name">
			</div>
			<div class="field half">
				<label for="email">Email</label>
				<input name="email" id="email" type="email" placeholder="Email">
			</div>
			<div class="field">
				<label for="message">Текст</label>
				<textarea name="message" id="message" rows="6" placeholder="Message"></textarea>
			</div>
			<ul class="actions">
				<li><input value="отправить" class="button alt" type="submit"></li>
			</ul>
		</form>

		<div class="copyright">
			&copy; Untitled. Design: <a href="https://templated.co">TEMPLATED</a>. Images: <a href="https://unsplash.com">Unsplash</a>.
		</div>

	</div>
</footer>

<!-- Scripts -->
<script type="text/javascript" src="resources/js/jquery-3.0.0.min.js"></script>
<script src="resources/assets/js/skel.min.js"></script>
<script src="resources/assets/js/util.js"></script>
<script src="resources/assets/js/main.js"></script>

</body>
</html>